{
  "$schema": "https://json.schemastore.org/prettierrc",
  "singleQuote": true,
  "jsxSingleQuote": true,
  "semi": true,
  "printWidth": 100,
  "tabWidth": 2,
  "bracketSpacing": true,
  "trailingComma": "es5",
  "bracketSameLine": true,
  "useTabs": false,
  "endOfLine": "lf",
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "singleQuote": false,
        "quoteProps": "preserve"
      }
    }
  ]
}
