{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "paths": {
      "@/*": ["./src/*"],
      "@peernest/config": ["../../packages/config/src"],
      "@peernest/core": ["../../packages/core/src"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["eslint.config.js", "eslint.config.cjs", "eslint.config.mjs"],
  "references": [
    {
      "path": "../../packages/core/tsconfig.lib.json"
    },
    {
      "path": "../../packages/config/tsconfig.lib.json"
    }
  ]
}
